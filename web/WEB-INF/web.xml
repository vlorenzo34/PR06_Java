<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>crear_clientes</servlet-name>
        <servlet-class>controller.crear_clientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validacion</servlet-name>
        <servlet-class>controller.validacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validacion_admin</servlet-name>
        <servlet-class>controller.validacion_admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mostrar_clientes</servlet-name>
        <servlet-class>controller.mostrar_clientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mostrar_productos</servlet-name>
        <servlet-class>controller.mostrar_productos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crear_productos</servlet-name>
        <servlet-class>controller.crear_productos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crear_clientes</servlet-name>
        <url-pattern>/crear_clientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validacion</servlet-name>
        <url-pattern>/validacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validacion_admin</servlet-name>
        <url-pattern>/validacion_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mostrar_clientes</servlet-name>
        <url-pattern>/mostrar_clientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mostrar_productos</servlet-name>
        <url-pattern>/mostrar_productos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crear_productos</servlet-name>
        <url-pattern>/crear_productos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/login.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
